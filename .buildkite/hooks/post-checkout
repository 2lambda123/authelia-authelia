#!/bin/bash

set +u

if [[ ! $BUILDKITE_COMMAND =~ "buildkite-agent pipeline upload" ]]; then
  echo "--- :buildkite: Setting up Build environment"
  source bootstrap.sh
  if [[ $BUILDKITE_COMMAND == ".buildkite/steps/buildandtest.sh" ]]; then
    go mod download
  fi
  if [[ $BUILDKITE_LABEL =~ ^:selenium ]]; then
    go mod download
  fi
fi